<div class="card mb-3" style="max-width: 540px">
  <div class="row g-0 p-2">
    <div class="position-relative col-4 center">
      <h1 class="position-absolute top-50 start-50 translate-middle">
        <%= user.name.charAt(0) + user.name.charAt(user.name.length -1) %>
      </h1>
    </div>
    <div class="col-6">
      <div class="card-body">
        <ul class="list-group list-group-flush">
          <li class="list-group-item fw-semibold"><%= user.name %></li>
          <li class="list-group-item"><%= user.mobile %></li>
          <li class="list-group-item"><%= user.email %></li>
        </ul>
      </div>
    </div>
    <div class="col-2 my-auto">
      <a href="/contact" class="btn btn-secondary w-100 my-1" role="button">
        <i class="bi bi-backspace"></i> Back</a
      >
      <a
        href="/contact/update/<%= user.name %>"
        class="btn btn-warning w-100 my-1"
        role="button"
      >
        <i class="bi bi-pencil-square"></i> Edit</a
      >
      <form action="/contact/<%= user.name %>" method="post">
        <input
          class="btn btn-danger w-100 my-1"
          type="submit"
          value="Delete"
          role="button"
        />
      </form>
    </div>
  </div>
</div>
